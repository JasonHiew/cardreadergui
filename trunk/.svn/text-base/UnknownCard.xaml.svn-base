<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:crg="clr-namespace:CardReaderGui">

    <DataTemplate DataType="{x:Type crg:UnknownCard}">
        <Border CornerRadius="8" Background="LightGray">
            <StackPanel>
                <Border CornerRadius="8,8,0,0" Background="#2f000000">
                    <TextBlock Margin="8" Text="Unknown Card" FontSize="36" Foreground="White" FontWeight="Bold" FontStyle="Italic" />
                </Border>
            </StackPanel>
        </Border>
    </DataTemplate>

</ResourceDictionary>